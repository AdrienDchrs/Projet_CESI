{% extends "base.html.twig" %}

{% block title %} AD pronos - Param√®tres  {% endblock %}

{% block body %}
<body class="relative w-full bg-cover bg-center" style="background-image: url('/assets/images/tennis.jpg');">
    <div class="overlay absolute inset-0 bg-black opacity-50"> </div>
    <header class="absolute top-0 left-0 right-0 px-4 py-2 flex items-center justify-between shadow-lg relative">
        <a href="/"> <img src="/assets/images/AD.png" id="logo" width="110px" height="110px"> </a>
    </header>

    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 flex items-center justify-center">
        <div class="bg-white p-8 rounded-md w-96 shadow-md border border-black relative">
            {{ form_start(form) }}
            {{ form_widget(form.plainPassword)}}

            {{ form_end(form) }}
        </div>
    </div>
    {% for message in app.flashes('success') %}
        <div class="fixed bottom-60 left-2 right-0 flex justify-center items-center">
            <div id="alert" class="flex items-center p-4 mb-4 text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
                <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                </svg>
            <span class="sr-only">Info</span>
            <div class="ms-3 text-sm font-medium mr-2">
                {{ message }}
            </div>
            <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-green-50 text-green-500 rounded-lg focus:ring-2 focus:ring-green-400 p-1.5 hover:bg-green-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-green-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-3" aria-label="Close">
                <span class="sr-only">Close</span>
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                </svg>
            </button>
        </div>
    {% endfor %}

{% include "base/_footer.html.twig" %}
{% endblock %}
